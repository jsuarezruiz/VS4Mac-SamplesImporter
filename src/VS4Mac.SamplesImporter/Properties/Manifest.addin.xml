<?xml version="1.0" encoding="UTF-8"?>
<Addin
    id = "MonoDevelop.SamplesImporter">
    <Header>
        <Name>Samples Importer</Name>
        <Description>Import easily samples to Visual Studio for macOS.</Description>
        <Author>Javier Suárez</Author>
        <Copyright>Javier Suárez</Copyright>
        <Url>https://github.com/jsuarezruiz/VSMac-SamplesImporter</Url>
    </Header>       
    <Extension 
        path="/MonoDevelop/Ide/Commands">
        <Command
            _label="Samples Importer" 
             id="VS4Mac.SamplesImporter.Commands.SamplesImporterCommand"
             defaultHandler="VS4Mac.SamplesImporter.Commands.SamplesImporterCommand"/>
    </Extension>
    <Extension 
        path = "/MonoDevelop/Ide/MainMenu/Tools">
        <CommandItem 
            id="VS4Mac.SamplesImporter.Commands.SamplesImporterCommand"/>
    </Extension>     
    <Extension 
        path = "/MonoDevelop/Ide/GlobalOptionsDialog/Other">
        <Section 
            id = "Samples Importer" 
            _label = "Samples Importer" 
            class = "VS4Mac.SamplesImporter.Views.SamplesImporterSettingsPanel" />
    </Extension>
</Addin>